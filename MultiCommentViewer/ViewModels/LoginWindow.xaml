<Window x:Class="MultiCommentViewer.ViewModels.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Title="ログイン" Height="1000" Width="1200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Margin="10"><Run Text="ログインしてください。完了したら「完了」ボタンを押してください。"/><Run Language="ja-jp" Text="既にログイン済みの場合はそのまま完了を押してください"/></TextBlock>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Content="完了" Click="CompleteButton_Click" Width="80" Height="30" Margin="5"/>
            <Button Content="キャンセル" Click="CancelButton_Click" Width="80" Height="30" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>